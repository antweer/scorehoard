<div class='box'>
  {{#if fail}}<p class='fail'>Username and password did not match. Please try again.</p>{{/if}}
  <form action="/login" method="POST">
    <label>Username:</label>
    <input type="text" name="login">
    <br>
    <label>Password:</label>
    <input name='password' type='password'>
    <br><br>
    <button type="submit">Submit</button>
  </form>
  <a href='/create_account'>No account? Create one here.</a> <br> <br>
  <a href='/'>Back home</a>
</div>
